{
  // vscode plugins: 
  // Color Picker - anseki
  // vscode-styled-components - Diego Lincoln
  // Prettier - Code formatter
  // Night Owl
  // GraphQl Ext for VSCode - GraphQL Foundation

  "files.autoSave": "afterDelay",
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "window.zoomLevel": -1,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.sendKeybindingsToShell": true,
  "html.format.wrapLineLength": 90,
  "html.format.wrapAttributes": "force-aligned",
  "breadcrumbs.enabled": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.inlayHints.parameterTypes.enabled": true,
  "js/ts.implicitProjectConfig.strictNullChecks": true,
  "workbench.statusBar.visible": false,
  "workbench.sideBar.location": "left",
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Night Owl (No Italics)",
  "prettier.useTabs": true,
  "prettier.jsxSingleQuote": true,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.jsxBracketSameLine": true,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 150,
  "prettier.proseWrap": "never",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.accessibilityPageSize": 16,
  "editor.wordWrapColumn": 120,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.fontSize": 16,
  "editor.fontFamily": "Fira Code",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnType": true,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "editor.tabCompletion": "on",
  "editor.smoothScrolling": true,
  "editor.lineHeight": 20,
  "editor.fontLigatures": true,
  "editor.fontWeight": "300",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "none",
  "editor.bracketPairColorization.enabled": true,
  // IntelliSense
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
 "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestionsDelay": 1,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "recentlyUsed",
  "editor.wordBasedSuggestions": true,
  "editor.parameterHints.enabled": true,
  "workbench.colorCustomizations": {
    "[Night Owl (No Italics)]": {
      "breadcrumb.foreground": "#89a4bb",
    }
  },
  "editor.tokenColorCustomizations": {
    "[Night Owl (No Italics)]": {
      "functions": "#44a3fc",
      "comments": "#48a76b",
      "numbers": "#2bff00",
      "keywords": "#C792EA",
      "variables": "#ffeca1",
      "types": "#fd9dea",
      "strings": "#ffffff",
      "textMateRules": [
        {
          "scope": [
            "comment.line.double-slash",
          ],
          "settings": {
            "foreground": "#48a76b"
          }
        },
        {
          "scope": [
            "keyword.operator",
          ],
          "settings": {
            "foreground": "#a6d4ff"
          }
        },
        {
          "scope": [
            "punctuation",
            "punctuation.separator.comma",
            "meta.function punctuation.separator.comma",
          ],
          "settings": {
            "foreground": "#C792EA"
          }
        },
        {
          "scope": [
            "constant.language",
            "constant.language.null",
            "constant.language.boolean",
            "meta.structure.dictionary.json meta.structure.dictionary.value constant.language",
          ],
          "settings": {
            "foreground": "#FAF39F"
          }
        },
        {
          "scope": [
            "variable.other.readwrite.alias.ts",
            "variable.other.readwrite.alias.tsx",
            "variable.other.readwrite.alias.js",
          ],
          "settings": {
            "foreground": "#75bcff"
          }
        },
        {
          "scope": [
            "variable.other.constant",
            "variable.other.object.ts",
            "variable.other.object.tsx",
            "variable.other.object.js",
            "variable.other.readwrite.ts",
            "variable.other.readwrite.tsx",
            "variable.other.readwrite.js",
            "variable.parameter",
          ],
          "settings": {
            "foreground": "#ffeca1"
          }
        },
        {
          "scope": [
            "variable.other.object.property",
            "entity.other.attribute-name",
            "variable.other.property",
            "meta.object-literal.key.ts",
            "meta.object-literal.key.tsx",
            "meta.object-literal.key.js",
          ],
          "settings": {
            "foreground": "#91e4d5"
          }
        },
        {
          "scope": [
            "string.quoted"
          ],
          "settings": {
            "foreground": "#dcdcdc"
          }
        },
        {
          "scope": [
            "support.class.component.ts",
            "support.class.component.tsx",
            "support.class.component.js",
            "entity.name.tag.ts",
            "entity.name.tag.tsx",
            "entity.name.tag.js",
          ],
          "settings": {
            "foreground": "#44a3fc"
          }
        }
      ]
    }
  },
}